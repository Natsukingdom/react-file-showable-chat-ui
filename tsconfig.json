{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "noResolve": false,
    "noImplicitAny": false,
    "outDir": "./lib",
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "jsx": "react"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["./node_modules/**/*"]
}
